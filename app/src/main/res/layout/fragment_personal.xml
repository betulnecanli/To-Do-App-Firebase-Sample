<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenes.main.personal.PersonalFragment">


    <ImageView
        android:id="@+id/button"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/baseline_person_pin_24"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    
    <Button
        android:id="@+id/upload_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_border_color_24"
        app:backgroundTint="#848080"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button" />


    <Button
        android:id="@+id/user_name_button"
        android:text="user name"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5C92999F"
        app:layout_constraintTop_toBottomOf="@+id/button" />




    <Button
        android:layout_marginTop="150dp"
        android:id="@+id/save_button"
        android:text="SAVE"
        android:textSize="20sp"
        android:layout_marginHorizontal="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#33A2FF"
        app:layout_constraintTop_toBottomOf="@+id/user_name_button" />

    <Button
        android:id="@+id/delete_user_button"
        android:text="DELETE USER"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F63D0F"
        app:layout_constraintTop_toBottomOf="@+id/save_button" />

</androidx.constraintlayout.widget.ConstraintLayout>